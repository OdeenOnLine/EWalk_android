<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/iv_rank"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_rank_first"
            />

        <TextView
            android:id="@+id/tv_rank"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="1000"
            android:textColor="#AAB2B8"
            android:textSize="15sp"
            android:gravity="center"
            />



        <milestone.ewalk.widget.CircularImage
            android:id="@+id/iv_poster"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ltf"
                android:textColor="#333333"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/tv_company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#646464"
                android:textSize="12sp"
                android:text="公司"
                android:layout_marginTop="5dp"
                />
        </LinearLayout>



        <TextView
            android:id="@+id/tv_my_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的团队"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:background="@drawable/bg_orange_corner"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            >

            <TextView
                android:id="@+id/tv_core"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="100000"
                android:textColor="#AAB2B8"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/tv_wanbu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#AAB2B8"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:text="万步率:0%"
                />
        </LinearLayout>




    </LinearLayout>

    <View
        android:layout_marginLeft="50dp"
        style="@style/set_item_Line_hor"/>

</LinearLayout>
